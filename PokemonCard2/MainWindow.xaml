<Window x:Class="PokemonCard2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokemonCard2"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="400">
    <Grid Margin="10" Background="DeepSkyBlue">

        <!-- Rows for card sections -->
        <Grid.RowDefinitions>
            <!-- HEADER -->
            <RowDefinition Height="Auto"/>
            <!-- PICTURE -->
            <RowDefinition Height="2*"/>
           
            <!-- MOVE 1 -->
            <RowDefinition Height="*"/>
            <!-- MOVE 2 -->
            <RowDefinition Height="*"/>
            <!-- WEAK/RESIST/RETREAT -->
            <RowDefinition Height="Auto"/>
            <!-- FOOTER -->
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="2" Grid.RowSpan="2" BorderBrush="BlueViolet" BorderThickness="2" CornerRadius="8" />
        <!--Header-->

        <Grid Grid.Row="0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="30"/>

            </Grid.ColumnDefinitions>

            <Border Grid.Column="1">
                <TextBlock x:Name="Name" Text="Name" FontSize="24" FontWeight="Bold"/> 
            </Border>
            <Border Grid.Column="1">
                <TextBlock HorizontalAlignment="Right" VerticalAlignment="Bottom" FontWeight="Bold" FontSize="8">HP</TextBlock>
            </Border>
            <Border Grid.Column="2">
                <TextBlock x:Name="HP" HorizontalAlignment="Right" FontWeight="Bold" FontSize="24" Text ="000"/>
            </Border>
            <Border Grid.Column="3">
                <Image Margin="0,0,5,0" x:Name="TypeIcon" Source="/Images/WaterIcon.jpg" Height="20" Width="20" HorizontalAlignment="Right"/>
            </Border>

        </Grid>

        <Grid Grid.Row="1">
            
            <!--Image-->
        <Border  Margin="3" Grid.Row="0" BorderBrush="Beige" BorderThickness="4" CornerRadius="4" Background="Beige" >
                <Image x:Name="Image"/>
            </Border>
        
        <!--SubInfo-->
        <Border Grid.Row="1" VerticalAlignment="Bottom" BorderBrush="Beige" Background="Beige" CornerRadius="4">
            <TextBlock x:Name="SubInfo" Grid.Row="2" Text="Info" HorizontalAlignment="Center" FontSize="10"/>
        </Border>
        </Grid>

        <!--Move1-->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Image Margin="10,0,0,0" Grid.Column ="0" VerticalAlignment="Bottom"  Source="/Images/WaterIcon.jpg" Height="20" Width="20" HorizontalAlignment="Left"></Image>
                <Image Grid.Column ="1" VerticalAlignment="Bottom" Source="/Images/WaterIcon.jpg" Height="20" Width="20" HorizontalAlignment="Center"></Image>
                <Image Grid.Column ="2" VerticalAlignment="Bottom"  Source="/Images/WaterIcon.jpg" Height="20" Width="20" HorizontalAlignment="Right"></Image>
            </Grid>

          
            <Border Grid.Row="0" Grid.Column="1" >
                <TextBlock x:Name="AttackOne" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontWeight="Bold" FontSize="16" Margin="5">€€€€</TextBlock>
            </Border>
            <Border Grid.Row="0" Grid.Column="2" >
                <TextBlock x:Name="AttackOneDmg" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontWeight="Bold" FontSize="16" Margin="5">€€€€</TextBlock>
                
            </Border>
            <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3">
                <TextBlock  x:Name="AttackOneDescription" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="12" Margin="5"/>
            </Border>
        </Grid>

        <!--Move2-->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Image Margin="10,0,0,0" Grid.Column ="0" VerticalAlignment="Bottom"  Source="/Images/WaterIcon.jpg" Height="20" Width="20" HorizontalAlignment="Left"></Image>
                <Image Grid.Column ="1" VerticalAlignment="Bottom" Source="/Images/WaterIcon.jpg" Height="20" Width="20" HorizontalAlignment="Center"></Image>
                <Image Grid.Column ="2" VerticalAlignment="Bottom"  Source="/Images/WaterIcon.jpg" Height="20" Width="20" HorizontalAlignment="Right"></Image>
                <Image Grid.Column ="3" VerticalAlignment="Bottom"  Source="/Images/WaterIcon.jpg" Height="20" Width="20" HorizontalAlignment="Right"></Image>
            </Grid>
            
            
            
            
            <Border Grid.Row="0" Grid.Column="1" >
                <TextBlock x:Name="AttackTwo" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="16" FontWeight="Bold" Margin="5">€€€€</TextBlock>
            </Border>
            <Border Grid.Row="1" Grid.Column="0" >
                <TextBlock Grid.ColumnSpan="3" x:Name="AttackTwoDescription" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="12" Margin="5"/>
            </Border>
            <Border Grid.Row="0" Grid.Column="2">
                <TextBlock x:Name="AttackTwoDmg"  HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="16" FontWeight="Bold" Margin="5">€€€€</TextBlock>

            </Border>
            
        </Grid>

        <!--Weak/Resist/Retreat-->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" BorderBrush="Beige" BorderThickness="4" Margin="1">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12" FontWeight="Bold">weakness % x 2</TextBlock>
            </Border>
            <Border Grid.Column="1" BorderBrush="Beige" BorderThickness="4" Margin="1">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12" FontWeight="Bold">resistance</TextBlock>
            </Border>
            <Border Grid.Column="2" BorderBrush="Beige" BorderThickness="4" Margin="1">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12" FontWeight="Bold">Retreat %%%</TextBlock>
            </Border>
            
            
            
        </Grid>

        <!--Footer-->
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="12">Maker</TextBlock>
            <TextBlock Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="12">099/165 %</TextBlock>

            <TextBlock x:Name="Description" Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="12">Descriptdsion text</TextBlock>

        </Grid>

    </Grid>
</Window>
